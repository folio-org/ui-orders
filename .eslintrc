{
  "extends": ["@folio/eslint-config-stripes/acquisitions"],
  "parser": "@babel/eslint-parser",
  "overrides": [
    {
      "files": ["src/**/tests/*", "test/**/*"]
    }
  ],
  "rules": {
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true,
        "variables": true
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["__mock__", "./test/jest/__mock__"],
          ["fixtures", "./test/jest/fixtures"],
          ["helpers", "./test/jest/helpers"]
        ]
      }
    }
  }
}
